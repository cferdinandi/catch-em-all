{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noForEach": "off",
				"useArrowFunction": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"lineWidth": 120,
			"indentWidth": 4,
			"trailingCommas": "es5"
		}
	},
	"files": {
		"include": ["./app/*", "./serviceworker.js"]
	}
}
